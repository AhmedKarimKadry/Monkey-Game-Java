<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="monkeygame.MonkeyGameController">
   <center>
      <VBox prefHeight="700.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
         <children>
            <TextField alignment="CENTER" editable="false" prefHeight="200.0" prefWidth="1000.0" style="-fx-background-color: black; -fx-text-fill: white;" text="GAME OVER">
               <font>
                  <Font size="100.0" />
               </font>
            </TextField>
            <TextField fx:id="endText" editable="false" prefHeight="350.0" />
            <GridPane prefHeight="261.0" prefWidth="1000.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button mnemonicParsing="false" onAction="#buttonClickHandler" prefHeight="207.0" prefWidth="1000.0" text="QUIT">
                     <font>
                        <Font size="56.0" />
                     </font>
                  </Button>
               </children>
            </GridPane>
         </children>
      </VBox>
   </center>
</BorderPane>
